<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="10dp"
    android:orientation="vertical"
    android:background="#FFEB3B">

    <TextView
        android:id="@+id/txtViewDayOfWeek"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_margin="10dp"
        android:padding="10dp"/>

    <TextView
        android:id="@+id/txtViewTimeOfCourse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_margin="10dp"
        android:padding="10dp"/>

    <TextView
        android:id="@+id/txtViewTypesOfClass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_margin="10dp"
        android:padding="10dp"/>

    <LinearLayout
        android:gravity="end"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btnShowDetailCourse"
            android:src="@drawable/ic_show"
            android:background="@color/blue"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            />

        <ImageButton
            android:id="@+id/btnAddClass"
            android:src="@drawable/ic_edit_detail"
            android:background="@color/blue"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            />


        <ImageButton
            android:id="@+id/btnEditCourse"
            android:src="@drawable/ic_edit"
            android:background="@color/blue"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            />

        <ImageButton
            android:id="@+id/btnDeleteCourse"
            android:src="@drawable/ic_delete"
            android:background="@color/blue"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            />



    </LinearLayout>


</LinearLayout>