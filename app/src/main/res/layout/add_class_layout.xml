<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="Class Entry Form"
        android:layout_marginVertical="20dp"
        android:textSize="30sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/editTxtDateOfClass"
        android:textSize="21sp"
        android:hint="Enter date of class(dd/MM/yyyy"
        android:layout_marginVertical="5dp"
        android:layout_marginHorizontal="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/editTxtTeacherOfClass"
        android:textSize="21sp"
        android:hint="Enter name of teacher"
        android:layout_marginVertical="5dp"
        android:layout_marginHorizontal="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/editTxtComment"
        android:textSize="21sp"
        android:hint="Enter Comment(optional)"
        android:inputType="textMultiLine"
        android:scrollbars="vertical"
        android:layout_marginVertical="5dp"
        android:layout_marginHorizontal="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btnSaveClass"
        android:text="Save"
        android:layout_gravity="end"
        android:background="@color/orange"
        android:layout_marginHorizontal="20dp"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>



</LinearLayout>